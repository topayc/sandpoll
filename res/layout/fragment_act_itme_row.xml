<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/act_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_small_50" 
        android:layout_gravity="top">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/question_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caremiar" 
                android:textColor="#53D3D1"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_suffix" 
                android:layout_marginLeft="2dp"
                android:textSize="12sp"
                android:textColor="#888888"/>
        </LinearLayout>
        <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="우리 몸에 흐르는 피의 원래 색은 무엇일까요? 빨간색이 아닌가요? 너무 궁금합니다" 
                android:textColor="#000000"
                android:textSize="14sp"/>
          <TextView
                android:id="@+id/question_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:text="1일 전" 
                android:textColor="#555555"
                android:textSize="11sp"/>
    </LinearLayout>

</LinearLayout>